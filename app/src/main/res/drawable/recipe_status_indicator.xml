<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:constantSize="true">

    <item
        app:state_can_make_drink="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/default_card_corner_rad"/>
            <solid
                android:color="@color/recipe_status_available"/>
        </shape>
    </item>
    <item
        app:state_can_make_drink="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/default_card_corner_rad"/>
            <solid
                android:color="@color/recipe_status_unavailable"/>
        </shape>
    </item>

</selector>