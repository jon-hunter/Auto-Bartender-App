<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_queue_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_recipe_name_user_id"
        android:text="@string/default_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_queue_position" />

    <TextView
        android:id="@+id/tv_server_status"
        android:text="@string/server_sync_no"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:maxWidth="160dp"
        android:ellipsize="none"
        android:layout_height="wrap_content"
        android:maxHeight="24dp"
        android:background="@drawable/status_bad"
        android:paddingHorizontal="@dimen/default_padding"
        android:paddingVertical="2dp"
        app:layout_constraintEnd_toStartOf="@id/tv_request_time"
        app:layout_constraintTop_toTopOf="@id/tv_recipe_name_user_id"
        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_name_user_id"
        android:layout_marginEnd="@dimen/default_padding"
        android:layout_marginVertical="@dimen/thin_padding"/>

    <TextView
        android:id="@+id/tv_request_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_queue_position"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btn_expand"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        app:srcCompat="@android:drawable/ic_menu_more"
        app:layout_constraintStart_toEndOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>