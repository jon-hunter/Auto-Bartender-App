<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_card_corner_rad"
        app:cardElevation="@dimen/default_card_elevation"
        android:layout_margin="@dimen/default_card_layout_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/recipe_info_thumb"
                android:id="@+id/recipe_info_thumb"/>

            <include layout="@layout/recipe_info_full"
                android:id="@+id/recipe_info_full"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>