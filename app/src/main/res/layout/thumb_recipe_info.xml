<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_info_thumb"
    android:layout_width="match_parent"
    android:layout_height="@dimen/thumbnail_height">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="@dimen/default_card_height"
        android:layout_height="@dimen/default_card_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_title_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_card_corner_rad"
        android:text="@string/default_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description_thumb"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/default_description"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_thumb" />

</androidx.constraintlayout.widget.ConstraintLayout>